@using IPTEntity.Entidades
@model SolicitudEmpleo
@{
	ViewData["Title"] = "Solicitud Empleo";
}
<h2><strong>Llena los campos: </strong></h2>
<div>
	<br />
</div>
<form method="post" asp-controller="SolicitudEmpleo" asp-action="Crear" enctype="multipart/form-data">
	<div class="row">
		<div class="col">
			<input type="text" class="form-control" placeholder="Número de cédula: " name="UsuarioId" required />
			<span asp-validation-for="UsuarioId" class="text-danger"></span>
		</div>
		<div class="col">
			<input type="text" class="form-control" placeholder="Nombres: " name="Nombres" required />
			<span asp-validation-for="Nombres" class="text-danger"></span>
		</div>
		<div class="col">
			<input type="text" class="form-control" placeholder="Apellidos: " name="Apellidos" required />
			<span asp-validation-for="Apellidos" class="text-danger"></span>
		</div>
	</div>

	<div>
		<br />
	</div>

	<div class="mb-3">
		<label class="form-label"><h3>Resumen de tu experiencia laboral: </h3></label>
		<textarea type="text" class="form-control" rows="3" name="ResumenCV" placeholder="Ingresa tu experiencia laboral"></textarea>
	</div>

	<div class="mb-4"><h3>Seleccione su profesión: </h3></div>
	<div class="mb-4">
		<select id="DropListProfesiones" name="Profesion" class="form-select"></select>
	</div>

	<div>
		<h3>Ingresa aquí tu CV: </h3>
	</div>

	<div class="mb-3">
		<input type="file" name="file" id="fileInput" class="btn btn-primary btn-file" accept=".pdf">
	</div>

	<input type="hidden" id="fileName" name="fileName">
	<input type="hidden" id="filePath" name="filePath">

	<div class="mb-3">
		<div>
			<br />
		</div>
		<h3><label class="form-label">Tipo de discapacidad: </label></h3>
		<select name="TipoDiscapacidad" class="form-select">
			<option value="Persona con paraplejia">Persona con paraplejia</option>
			<option value="Persona sorda">Persona sorda</option>
		</select>
	</div>

	<div>
		<h3>Estado de empleabilidad: </h3>
	</div>

	<div class="form-check">
		<input class="form-check-input" type="radio" name="EstadoEmpleado" value="Empleado" />
		<label>Empleado</label>
	</div>
	<div class="form-check">
		<input class="form-check-input" type="radio" name="EstadoEmpleado" value="Desempleado" checked />
		<label>Desempleado</label>
	</div>

	<br />

	<div class="d-flex justify-content-between align-items-center">
		<div>
			<button type="submit" class="btn btn-primary d-inline-flex mr-2">Enviar</button>
			<button type="button" class="btn btn-secondary d-inline-flex mr-2" onclick="window.location.href='@Url.Action("Index", "Home")'">Cancelar</button>
		</div>

		<div>
			<button type="button" class="btn btn-info d-inline-flex" onclick="window.location.href='@Url.Action("EditarSolicitudEmpleo", "SolicitudEmpleo")'">Editar</button>
			<button type="button" class="btn btn-danger d-inline-flex" onclick="window.location.href='@Url.Action("ConfirmarEliminarSolicitudEmpleo", "SolicitudEmpleo")'">Eliminar</button>
		</div>
	</div>
</form>

<script>
	document.getElementById('fileInput').addEventListener('change', function (event) {
		var file = event.target.files[0];
		if (file) {
			document.getElementById('fileName').value = file.name;
			document.getElementById('filePath').value = URL.createObjectURL(file);
		}
	});
</script>

<script>
	var select = document.getElementById("DropListProfesiones");


	var opciones = [
		"Ingeniería Mecánica",
		"Ingeniería Industrial",
		"Ingeniería Mecátronica",
		"Ingeniería Forestal",
		"Ingeniería Catastral",
		"Ingeniería Qúímica",
		"Ingeniería de Software",
		"Ingeniería de Sistemas",
		"Bachiller",
		"Técnico en programación de software",
		"Técnico en mantenimiento industrial",
		"Enfermería",
		"Servicios generales",
		"Guarda de seguridad",
		"Asistente administrativo virtual",
		"Servicio al cliente en línea",
		"Traductor o intérprete",
		"Trabajo de investigación en línea",
		"Redacción de contenido",
		"Programador web",
		"Edición de video o audio",
		"Tutor en línea",
		"Trabajo de diseño gráfico",
		"Consultoría en accesibilidad",
		"Empleado de tienda en línea",
		"Asistente de biblioteca",
		"Auxiliar de almacén",
		"Operador de servicio al cliente",
		"Empacador en línea de productos",
		"Asistente de limpieza en empresas",
		"Recepcionista",
		"Auxiliar de cafetería",
		"Ayudante de cocina",
		"Empleado de tienda minorista",
		"Recepcionista en empresas o instituciones",
		"Trabajador de ensamblaje en fábricas",
		"Auxiliar de lavandería"
	];

	opciones.forEach(function (opcion) {
		var option = document.createElement("option");
		option.text = opcion;
		select.add(option);
	});

	select.addEventListener("change", function () {
		var selectedValue = select.value;
	});
</script>

