@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<h1 class="display-5 fw-bold">Iniciar sesión</h1>

@if (ViewData.Keys.Contains("mensaje"))
{
    <p style="color: red;">
        @ViewData["mensaje"]
    </p>
}

<div class="card" style="background-color: #056d90">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 display-5">
                <label asp-for="Email" class="form-label">Correo electrónico:</label>
                <input asp-for="Email" autocomplete="off" class="form-control" style="font-size: 1.5rem" />
                <span asp-validation-for="Email" class="text-danger" style="font-size: 1.5rem"></span>
            </div>

            <div class="mb-3 display-5">
                <label asp-for="Password" class="form-label">Contraseña:</label>
                <input asp-for="Password" class="form-control" style="font-size: 1.5rem "/>
                <span asp-validation-for="Password" class="text-danger" style="font-size: 1.5rem"></span>
            </div>

            <div class="form-check mb-3 display-5">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame"/>
                <label class="form-check-label" asp-for="Recuerdame"></label>
            </div>

            <button class="btn-primary btn" style="font-size: 2rem">Ingresar</button>
            <a class="btn btn-success" asp-action="registro" style="font-size: 2rem">Crear una nueva cuenta</a>
          
            

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}