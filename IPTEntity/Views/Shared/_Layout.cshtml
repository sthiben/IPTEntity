@using IPTEntity.Servicios;
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - IPTEntity</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/IPTEntity.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				@* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Jair es gay</a> *@
				<img src="\LogoIPT.jpg" alt="Logo de la empresa" width="155px" height="110px" style="border-radius: 250px" />
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item" style="font-size: 25px">
							<strong><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></strong>
						</li>

						@if (User.IsInRole(Constantes.RolUsuario))
						{
							<li class="nav-item" style="font-size: 25px">
								<strong><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SolicitudEmpleo">Solicitud empleo</a></strong>
							</li>
						}

						@if (User.IsInRole(Constantes.RolEmpresa))
						{
							<li class="nav-item" style="font-size: 25px">
								<strong><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OfertaLaboral">Oferta de Empleo</a></strong>
							</li>
							<li class="nav-item" style="font-size: 25px">
								<strong><a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="ListadoUsuarios">Personas Disponibles Para Empleo</a></strong>
							</li>
						}

						@if (User.IsInRole(Constantes.RolAdmin))
						{
							<li class="nav-item" style="font-size: 25px">
								<strong><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SolicitudEmpleo">Solicitud empleo</a></strong>
							</li>
							<li class="nav-item" style="font-size: 25px">
								<strong><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Oferta de Empleo">Oferta de Empleo</a></strong>
							</li>
							<li class="nav-item" style="font-size: 25px">
								<strong><a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Listado">Listado de usuarios</a></strong>
							</li>
						}

					</ul>
					<partial name="_linksLogin" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted" style="background-color: #056d90">
		<div class="container" style="color: white">
			<center>&copy; 2024 - IPT Inclusion para todos - <a asp-area="" asp-controller="Home" asp-action="" style="color: black">Inicio</a></center>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
